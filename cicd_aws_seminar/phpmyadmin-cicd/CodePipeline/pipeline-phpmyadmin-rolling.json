{
  "pipeline": {
    "name": "phpmyadmin-pipeline-rolling-<氏名>-<日付>",
    "roleArn": "arn:aws:iam::<ACCOUNT_ID>:role/CodePipelineServiceRole-<氏名>-<日付>",
    "artifactStore": {
      "type": "S3",
      "location": "cicd-<氏名>-<日付>"
    },
    "stages": [
      {
        "name": "Source",
        "actions": [
          {
            "name": "Source",
            "actionTypeId": {
              "category": "Source",
              "owner": "AWS",
              "provider": "CodeStarSourceConnection",
              "version": "1"
              },
            "configuration": {
              "ConnectionArn": "<CONNECTION_ARN>",
              "FullRepositoryId": "<GITHUB_USER>/ci_cd_aws_seminar_phpmyadmin",
              "BranchName": "main"
            },
            "outputArtifacts": [{ "name": "SourceOut" }]              
          }
        ]
      },
      {
        "name": "Build",
        "actions": [
          {
            "name": "CodeBuild",
            "actionTypeId": { 
              "category": "Build", 
              "owner": "AWS", 
              "provider": "CodeBuild", 
              "version": "1" 
            },
            "inputArtifacts": [{ "name": "SourceOut" }],
            "outputArtifacts": [{ "name": "BuildOut" }],
            "configuration": { 
              "ProjectName": "phpmyadmin-build-<氏名>-<日付>" 
            }
          }
        ]
      },
      {
        "name": "Deploy",
        "actions": [
          {
            "name": "ECS_Rolling_Deploy",
            "actionTypeId": { 
              "category": "Deploy",
               "owner": "AWS",
               "provider": "ECS",
               "version": "1" 
                },
            "inputArtifacts": [{ "name": "BuildOut" }],
            "configuration": {
              "ClusterName": "ecs-cluster-<氏名>-<日付>",
              "ServiceName": "phpmyadmin-service-<氏名>-<日付>",
              "FileName": "imagedefinitions.json"
            }
          }
        ]
      }
    ],
    "version": 1
  }
}
