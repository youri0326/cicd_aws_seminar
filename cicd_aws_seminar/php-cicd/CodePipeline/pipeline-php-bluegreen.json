{
  "pipeline": {
    "name": "php-pipeline-bluegreen-<氏名>-<日付>",
    "roleArn": "arn:aws:iam::<ACCOUNT_ID>:role/CodePipelineServiceRole-<氏名>-<日付>",
    "artifactStore": {
      "type": "S3",
      "location": "cicd-<氏名>-<日付>"
    },
    "stages": [
      {
        "name": "Source",
        "actions": [
          {
            "name": "Source",
            "actionTypeId": {
              "category": "Source",
              "owner": "AWS",
              "provider": "CodeStarSourceConnection",
              "version": "1"
            },
            "configuration": {
              "ConnectionArn": "<CONNECTION_ARN>",
              "FullRepositoryId": "<GITHUB_USER>/ci_cd_aws_seminar_php",
              "BranchName": "main"
            },
            "outputArtifacts": [
              { "name": "SourceOut" }
            ]
          }
        ]
      },
      {
        "name": "Build",
        "actions": [
          {
            "name": "Build",
            "actionTypeId": {
              "category": "Build",
              "owner": "AWS",
              "provider": "CodeBuild",
              "version": "1"
            },
            "configuration": {
              "ProjectName": "php-build-<氏名>-<日付>"
            },
            "inputArtifacts": [
              { "name": "SourceOut" }
            ],
            "outputArtifacts": [
              { "name": "BuildOut" }
            ]
          }
        ]
      },
      {
        "name": "Deploy",
        "actions": [
          {
            "name": "CodeDeployAction",
            "actionTypeId": {
              "category": "Deploy",
              "owner": "AWS",
              "provider": "CodeDeployToECS",
              "version": "1"
            },
            "inputArtifacts": [
              { "name": "BuildOut" }
            ],
            "configuration": {
              "ApplicationName": "cicd-aws-codedeploy-php-<氏名>-<日付>",
              "DeploymentGroupName": "cicd-aws-codedeploy-php-group",
              "AppSpecTemplateArtifact": "BuildOut",
              "AppSpecTemplatePath": "appspec.yml",
              "TaskDefinitionTemplateArtifact": "BuildOut",
              "TaskDefinitionTemplatePath": "taskdef-php.json"
            }
          }
        ]
      }
    ],
    "version": 1
  }
}
