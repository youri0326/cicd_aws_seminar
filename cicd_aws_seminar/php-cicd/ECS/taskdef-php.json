{
  "family": "task-php-<氏名>-<日付>",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/TaskExecutionRole-<氏名>-<日付>",
  "containerDefinitions": [
    {
      "name": "php",
      "image": "<ACCOUNT_ID>.dkr.ecr.ap-northeast-1.amazonaws.com/ecr-php-<氏名>-<日付>:latest",
      "memory": 512,
      "cpu": 256,
      "essential": true,
      "portMappings": [
        {
           "containerPort": 80,
            "protocol": "tcp"
         }
      ],
      "environment": [
        { "name": "DB_HOST", "value": "<rdsのエンドポイント>" },
        { "name": "DB_USER", "value": "root" },
        { "name": "DB_PASS", "value": "root1234" },
        { "name": "DB_NAME", "value": "sampledb" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/task-<氏名>-<日付>",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "php"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024"
}
